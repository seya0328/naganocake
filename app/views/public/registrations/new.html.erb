<h2>新規会員登録</h2>
<!--%=from_with model: Costomer.new do |f| %>-->
  
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <p>姓</p>
  <div class="field">
   <%= f.text_field :last_name %>
  </div>
  <p>名</p>
  <div class="field">
    <%= f.text_field :first_name %>
  </div>
   <p>姓カナ</p> 
  <div class="field">
   <%= f.text_field :last_name_kana %>
  </div>
  <p>名カナ</p>
  <div class="field">
   <%= f.text_field :first_name_kana %>
 </div>
 
 
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "パスワード(6文字以上)" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "パスワード(確認用)" %>
  </div>
<p>郵便番号</p>
  <div class="field">
   <%= f.text_field :postal_code %>
 </div>
  <p>住所</p>
  <div class="field">
   <%= f.text_field :address %>
 </div>
 <p>電話番号</p>
 <div class="field">
   <%= f.text_field :telephone_number %>
 </div>
 
  
  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>
  
<%= render "public/shared/links" %>
