<tr class="table-secondary">
<h2>ショッピングカート</h2>
</tr>
  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        <table>
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
              <th></th>
            </tr>
          </thead>
          
          <tbody>
          <% @cart_items.each do |cart_item| %>
      　     <tr>
      　      <td><%= cart_item.item.image %><%= cart_item.item.name %> </td>
      　       <td><%= cart_item.item.with_tax_price  %></td>
　            <td><%= cart_item.subtotal %></td>
　            <% @合計金額 +=  cart_item.subtotal %>
　         </tr>
　        <% end %>
          </tbody>
        </table>
        
      </div>
    </div>
  </div>
