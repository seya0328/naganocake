<!--顧客：商品一覧-->
<div class="container px-5 px-sm-0">
  <h2>商品一覧</h2>
  <div class="row">
    
    <% @items.each do |item| %>
      <div class="col-3">
      <%= link_to item_path(item.id) do %>
      <%= image_tag item.image, size: "100x100" %>
      <p><%= item.name %></p>
      <% end %>
      <p><%= item.price %><span>円</span></p><br>
      </div>
    <% end %>
    
  </div>
</div>