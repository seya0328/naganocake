<h1>商品詳細画面</h1>

<% if @item.image.attached? %>
  <%= image_tag @item.image, size: "300x300" %>
<% else %>
  <%= image_tag 'no_image', size: "300x300" %>
<% end %>
  <div class="container">
    <div class="row">
      <div class="col-lg-9">
        <table>
          <h2>商品名</h2>
            <p><%= @item.name %></p>

          <h2>商品説明</h2>
            <p><%= @item.introduction %></p>

          <h2>税込価格</h2>
            <p><%= @item.price %><span>円</span></p><br>

          <%= link_to "編集する", edit_admin_item_path(@item.id) %>
        </table>
      </div>
    </div>
  </div>
