<!DOCTYPE html>
<html>
  <head>
    <title>Naganocake</title>
    <!--<meta name="viewport" content="width=device-width,initial-scale=1">-->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><h1>naganocake</h1></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <!--#管理者が見るページ-->
            <% if admin_signed_in? %>
            <li class="nav-item">
              <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to "会員一覧", admin_customers_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to "注文履歴一覧", root_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path,method: :delete, class: 'nav-link text-dark border border-dark rounded' %>
            </li>
            <!--#会員が見るページ-->
            <% elsif customer_signed_in? %>
            <li class="nav-item">
              <%= link_to 'マイページ', my_page_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to "商品一覧", admin_items_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to "カート", cart_items_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_admin_session_path,method: :delete, class: 'nav-link text-dark border border-dark rounded' %>
            </li>
            <!--＃管理者でも会員でもない人が見るページ-->
            <% else %>
            <li class="nav-item">
              <%= link_to "About", about_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to '商品一覧', admin_items_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-dark border border-dark rounded mr-5' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-dark border border-dark rounded' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
    <%= yield %>
    </main>
  </body>
</html>
